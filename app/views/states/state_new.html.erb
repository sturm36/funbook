<%= link_to("<< Back to list", {:action => 'index_states'}, :class => 'back-link')%>

<div class="states new">


	<h2>ADD NEW State</h2>
	<%= form_for(:state , :url => {:action => 'create'}) do |f| %>

	<table>
		<tr>
			<th>Position</th>
			<td><%= f.text_field(:position)%></td>
		</tr>


		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name)%></td>
		</tr>

		<tr>
			<th>ID</th>
			<td><%= f.text_field(:id)%></td>
		</tr>

		<tr>
			<th>Population</th>
			<td><%= f.text_field(:population)%></td>
		</tr>

		<tr>
			<th>Wikilink</th>
			<td><%= f.text_field(:wikilink)%></td>
		</tr>

		<tr>
			<th>Area</th>
			<td><%= f.text_field(:area)%></td>
		</tr>

	</table>	

	<div class="form-button">
		<%= submit_tag("ADD State!!")%>
	</div>

	<% end %>
</div>